<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/title_red_bg"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_menu"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        />
    <ImageButton
        android:id="@+id/bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/back"
        android:background="@null"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智慧北京"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="#fff"
        />
    <LinearLayout
        android:id="@+id/bar_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        >
        <ImageButton
            android:id="@+id/bar_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_textsize"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/bar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_share"
            android:background="@null"
            android:padding="5dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_pic_grid_type"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        />

</RelativeLayout>